{
  "name": "rekt-ceo-backend",
  "version": "1.0.0",
  "description": "Backend API for Rekt CEO NFT minting platform",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": ["nft", "ethereum", "web3", "api"],
  "author": "Rekt CEO Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.21.2",
    "ethers": "^6.15.0",
    "siwe": "^2.3.2",
    "pinata": "^2.5.1",
    "ioredis": "^5.8.2",
    "express-rate-limit": "^7.5.1",
    "rate-limit-redis": "^4.3.0",
    "helmet": "^8.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "zod": "^3.25.76",
    "winston": "^3.18.3",
    "jsonwebtoken": "^9.0.2",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/cors": "^2.8.19",
    "@types/node": "^22.19.1",
    "@types/jsonwebtoken": "^9.0.10",
    "typescript": "^5.9.3",
    "ts-node-dev": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "eslint": "^9.39.1",
    "prettier": "^3.6.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.14",
    "ts-jest": "^29.4.5"
  }
}
